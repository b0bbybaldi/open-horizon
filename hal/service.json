{
  "org": "dcmartin@us.ibm.com",
  "label": "hal",
  "description": "Provides hardware abstraction layer as service",
  "documentation": "https://github.com/dcmartin/open-horizon/hal/README.md",
  "url": "com.github.dcmartin.open-horizon.hal",
  "version": "0.0.1",
  "arch": "{arch}",
  "public": true,
  "sharable": "multiple",
  "requiredServices": [],
  "userInput": [
        {
            "name": "LOG_LEVEL",
            "label": "specify logging level",
            "type": "string",
            "defaultValue": "info"
        },
        {
            "name": "DEBUG",
            "label": "debug on/off",
            "type": "boolean",
            "defaultValue": "false"
        }
  ],
  "deployment": {
    "services": {
      "hal": {
        "environment": [
           "SERVICE=hal"
        ],
        "image": "dcmartin/{arch}_hal:0.0.1",
        "privileged": true
      }
    }
  },
  "tmpfs": {
    "size": 2048000
  },
  "ports": {
    "8585/tcp": 80
  }
}
