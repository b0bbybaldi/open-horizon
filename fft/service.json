{
  "org": "${HZN_ORG_ID}",
  "label": "fft",
  "description": "announces discoveries",
  "documentation": "https://github.com/dcmartin/open-horizon/fft/README.md",
  "url": "com.github.dcmartin.open-horizon.fft",
  "version": "0.0.1",
  "arch": null,
  "public": true,
  "sharable": "singleton",
  "requiredServices": [],
  "userInput": [
    {
      "name": "HERALD_PERIOD",
      "label": "seconds between update",
      "type": "int",
      "defaultValue": "30"
    },
    {
      "name": "LOG_LEVEL",
      "label": "specify logging level",
      "type": "string",
      "defaultValue": "info"
    },
    {
      "name": "DEBUG",
      "label": "debug on/off",
      "type": "boolean",
      "defaultValue": "false"
    }
  ],
  "deployment": {
    "services": {
      "fft": {
        "environment": [
          "SERVICE_LABEL=fft",
          "SERVICE_VERSION=0.0.1",
          "SERVICE_PORT=9192"
        ],
        "specific_ports": [ { "HostPort": "9192/tcp", "HostIP": "0.0.0.0" } ],
        "image": null
      }
    }
  },
  "tmpfs": {
    "size": 8192000
  }
}
