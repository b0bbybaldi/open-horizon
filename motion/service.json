{
  "org": "dcmartin@us.ibm.com",
  "label": "motion for amd64",
  "description": "Provides motion-project.io as service",
  "documentation": "https://github.com/dcmartin/open-horizon/motion/README.md",
  "url": "https://https://github.com/dcmartin/open-horizon/motion/motion",
  "version": "0.0.1",
  "arch": "amd64",
  "public": true,
  "sharable": "singleton",
  "requiredServices": [
        {
            "url": "github.com.open-horizon.examples.cpu",
            "org": "IBM",
            "version": "1.2.2",
            "arch": "amd64"
        },
        {
            "url": "github.com.open-horizon.examples.gps",
            "org": "IBM",
            "version": "2.0.5",
            "arch": "amd64"
        }
  ],
  "userInput": [
        {
            "name": "MSGHUB_API_KEY",
            "label": "",
            "type": "string",
            "defaultValue": ""
        },
        {
            "name": "VERBOSE",
            "label": "log everything that happens",
            "type": "string",
            "defaultValue": "0"
        }
  ],
  "deployment": {
    "services": {
      "motion": {
        "image": "dcmartin/amd64_motion:0.0.1",
        "privileged": true,
        "devices": [
          "/dev/video0:/dev/video0"
        ]
      }
    }
  }
}
