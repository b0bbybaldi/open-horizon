{
  "org": "dcmartin@us.ibm.com",
  "label": "motion",
  "description": "Provides motion-project.io as service",
  "documentation": "https://github.com/dcmartin/open-horizon/motion/README.md",
  "url": "com.github.dcmartin.open-horizon.motion",
  "version": "0.0.1",
  "arch": "{arch}",
  "public": true,
  "sharable": "singleton",
  "requiredServices": [
        { "url": "github.com.dcmartin.open-horizon.hal", "org": "dcmartin@us.ibm.com", "version": "0.0.1", "arch": "{arch}" },
        { "url": "github.com.dcmartin.open-horizon.cpu", "org": "dcmartin@us.ibm.com", "version": "0.0.1", "arch": "{arch}" },
        { "url": "github.com.dcmartin.open-horizon.wan", "org": "dcmartin@us.ibm.com", "version": "0.0.1", "arch": "{arch}" }
  ],
  "userInput": [
        { "name": "MOTION_DEVICE_DB", "label": "database and group name for devices", "type": "string", "defaultValue": "motion" },
        { "name": "MOTION_DEVICE_NAME", "label": "name of device", "type": "string", "defaultValue": "testcam" },
        { "name": "MOTION_MQTT_HOST", "label": "IP or FQDN for mqtt host", "type": "string", "defaultValue": null },
        { "name": "MOTION_MQTT_PORT", "label": "port number", "type": "int", "defaultValue": "1883" },
        { "name": "MOTION_MQTT_USERNAME", "label": "username", "type": "string", "defaultValue": null },
        { "name": "MOTION_MQTT_PASSWORD", "label": "password", "type": "string", "defaultValue": null },
        { "name": "MOTION_POST_PICTURES", "label": "post pictures; on, off, center, best", "type": "boolean", "defaultValue": "off" },
        { "name": "MOTION_LOG_LEVEL", "label": "specify motion logging level", "type": "int", "defaultValue": "2" },
        { "name": "MOTION_LOG_TYPE", "label": "specify motion logging type", "type": "string", "defaultValue": "all" },
        { "name": "LOG_LEVEL", "label": "specify logging level", "type": "string", "defaultValue": "info" },
        { "name": "DEBUG", "label": "debug; true or false", "type": "boolean", "defaultValue": "false" }
  ],
  "deployment": {
    "services": {
      "motion": {
        "environment": [
           "SERVICE=motion"
        ],
        "image": "dcmartin/amd64_motion:0.0.1",
        "privileged": true,
        "devices": [
          "/dev/video0:/dev/video0"
        ]
      }
    }
  },
  "tmpfs": {
    "size": 32767000 
  },
  "ports": {
    "8583/tcp": 80
  }
}
