{
  "name": "Motion",
  "url": "https://github.com/dcmartin/open-horizon",
  "version": "0.0.1",
  "slug": "motion",
  "description": "Motion addon from LINUX package https://motion-project.github.io/",
  "startup": "before",
  "boot": "auto",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "audio": true,
  "devices": [
    "/dev/video0:/dev/video0:rwm"
  ],
  "privileged": [
    "SYS_ADMIN"
  ],
  "webui": "http://[HOST]:[PORT:7999]/",
  "timeout": 90,
  "tmpfs": "size=256m,uid=0,rw",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "ports": {
    "7999/tcp": 7999,
    "8000/tcp": 8000,
    "8090/tcp": 8090
  },
  "options": {
    "log_level": "info",
    "log_motion": 2,
    "devicedb": "motion",
    "name": "",
    "username": "",
    "password": "",
    "timezone": "America/Los_Angeles",
    "unit_system": "imperial",
    "cloudant": {
      "url": "",
      "username": "",
      "password": ""
    },
    "watson": {
      "url": "",
      "apikey": "",
      "classifier": "",
      "date": "",
      "version": ""
    },
    "digits": {
      "url": "",
      "jobid": ""
    },
    "mqtt": {
      "host": "core-mosquitto",
      "port": 1883
    },
    "cameras": [
      {
        "name": "sample",
        "device": "/dev/video0",
        "type": "ps3eye",
        "palette": 15,
        "fov": 75,
        "width": 640,
        "height": 480,
        "fps": 5
      }
    ]
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)",
    "devicedb": "str",
    "name": "str?",
    "elevation": "int?",
    "latitude": "float?",
    "longitude": "float?",
    "unit_system": "str?",
    "username": "str?",
    "password": "str?",
    "www": "str?",
    "port": "port?",
    "email": "email?",
    "timezone": "str?",
    "camera_type": "str?",
    "cameras": [
      {
        "name": "str",
        "device": "str?",
        "palette": "int?",
        "url": "str?",
        "mac": "str?",
        "type": "str?",
        "fov": "int?",
        "fps": "int?",
        "userpass": "str?",
        "keepalive": "str?",
        "port": "port?",
        "quality": "int?",
        "width": "int?",
        "height": "int?",
        "rotate": "int?",
        "threshold": "int?",
        "event_gap": "int?",
        "brightness": "int?",
        "contrast": "int?",
        "saturation": "int?",
        "lightswitch": "int?",
        "models": "str?"
      }
    ],
    "webcontrol_port": "port?",
    "stream_port": "port?",
    "log_motion": "int?",
    "log_type": "str?",
    "videodevice": "str?",
    "v412_pallette": "int?",
    "auto_brightness": "str?",
    "locate_motion_mode": "str?",
    "locate_motion_style": "str?",
    "output_pictures": "str?",
    "picture_type": "str?",
    "threshold_tune": "str?",
    "pre_capture": "int?",
    "post_capture": "int?",
    "event_gap": "int?",
    "minimum_motion_frames": "int?",
    "quality": "int?",
    "width": "int?",
    "height": "int?",
    "framerate": "int?",
    "minimum_frame_time": "int?",
    "brightness": "int?",
    "contrast": "int?",
    "saturation": "int?",
    "hue": "int?",
    "rotate": "int?",
    "fov": "int?",
    "fps": "int?",
    "stream_quality": "int?",
    "threshold": "int?",
    "lightswitch": "int?",
    "netcam_url": "str?",
    "netcam_userpass": "str?",
    "netcam_keepalive": "str?",
    "watson": {
      "url": "str?",
      "apikey": "str?",
      "classifier": "str?",
      "date": "str?",
      "version": "str?"
    },
    "digits": {
      "jobid": "str?",
      "url": "str?"
    },
    "mqtt": {
      "host": "str?",
      "port": "port?",
      "username": "str?",
      "password": "str?"
    },
    "cloudant": {
      "url": "str?",
      "username": "str?",
      "password": "str?"
    },
    "daemon": "str?",
    "interval": "int?",
    "post_pictures": "str?",
    "minimum_animate": "int?",
    "reload": "str?",
    "target_dir": "str?",
    "share_dir": "str?"
  },
  "environment": {
    "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
  }
}
