{
  "org": "%%SERVICE_ORG%%",
  "label": "%%SERVICE_NAME%% for %%ARCH%%",
  "description": "Provides motion-project.io as service",
  "documentation": "https://github.com/dcmartin/open-horizon/motion/README.md",
  "url": "https://%%SERVICE_DOMAIN%%/%%SERVICE_NAME%%",
  "version": "%%SERVICE_VERSION%%",
  "arch": "%%ARCH%%",
  "public": true,
  "sharable": "multiple",
  "requiredServices": [
        {
            "url": "github.com.open-horizon.examples.cpu",
            "org": "IBM",
            "version": "1.2.2",
            "arch": "%%ARCH%%"
        },
        {
            "url": "github.com.open-horizon.examples.gps",
            "org": "IBM",
            "version": "2.0.5",
            "arch": "%%ARCH%%"
        }
  ],
  "userInput": [
        {
            "name": "MSGHUB_API_KEY",
            "label": "",
            "type": "string",
            "defaultValue": ""
        },
        {
            "name": "VERBOSE",
            "label": "log everything that happens",
            "type": "string",
            "defaultValue": "0"
        }
  ],
  "deployment": {
    "services": {
      "motion": {
        "image": "%%DOCKER_HUB_ID%%/%%ARCH%%_%%SERVICE_NAME%%:%%SERVICE_VERSION%%",
        "privileged": true,
        "devices": [
          "/dev/video0:/dev/video0"
        ]
      }
    }
  }
}
