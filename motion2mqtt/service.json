{
  "org": "dcmartin@us.ibm.com",
  "label": "motion2mqtt",
  "description": "Provides motion-project.io as service sending output via MQTT",
  "documentation": "https://github.com/dcmartin/open-horizon/motion2mqtt/README.md",
  "url": "com.github.dcmartin.open-horizon.motion2mqtt",
  "version": "0.0.12",
  "arch": null,
  "public": true,
  "sharable": "singleton",
  "requiredServices": [
    { "url": "com.github.dcmartin.open-horizon.cpu", "org": "dcmartin@us.ibm.com", "version": "0.0.3", "arch": null },
    { "url": "com.github.dcmartin.open-horizon.yolo4motion", "org": "dcmartin@us.ibm.com", "version": "0.0.4", "arch": null },
    { "url": "com.github.dcmartin.open-horizon.mqtt", "org": "dcmartin@us.ibm.com", "version": "0.0.3", "arch": null }
  ],
  "userInput": [
    { "name": "MOTION_TIMEZONE", "label": "database and group name for devices", "type": "string", "defaultValue": "GMT" },
    { "name": "MOTION_DEVICE_DB", "label": "database and group name for devices", "type": "string", "defaultValue": "motion" },
    { "name": "MOTION_DEVICE_NAME", "label": "name of device", "type": "string", "defaultValue": "default" },
    { "name": "MOTION_MQTT_HOST", "label": "IP or FQDN for mqtt host", "type": "string", "defaultValue": "mqtt" },
    { "name": "MOTION_MQTT_PORT", "label": "port number", "type": "int", "defaultValue": "1883" },
    { "name": "MOTION_MQTT_USERNAME", "label": "username", "type": "string", "defaultValue": "" },
    { "name": "MOTION_MQTT_PASSWORD", "label": "password", "type": "string", "defaultValue": "" },
    { "name": "MOTION_POST_PICTURES", "label": "post pictures; on, off, first, last, center, best", "type": "string", "defaultValue": "best" },
    { "name": "MOTION_EVENT_GAP", "label": "seconds of no motion indicating end of event", "type": "int", "defaultValue": "60" },
    { "name": "MOTION_THRESHOLD", "label": "changed pixel count indicating motion; range (1,maxInt]", "type": "int", "defaultValue": "1500" },
    { "name": "MOTION_THRESHOLD_MAX", "label": "maximum threshold indicating motion; 0 is off; range (1,maxInt]", "type": "int", "defaultValue": "0" },
    { "name": "MOTION_THRESHOLD_TUNE", "label": "attempt to tune threshold", "type": "boolean", "defaultValue": "false" },
    { "name": "MOTION_NOISE_LEVEL", "label": "noise level; range (1,maxInt]", "type": "int", "defaultValue": "32" },
    { "name": "MOTION_NOISE_TUNE", "label": "attempt to tune noise", "type": "boolean", "defaultValue": "true" },
    { "name": "MOTION_LOG_LEVEL", "label": "specify motion logging level", "type": "int", "defaultValue": "2" },
    { "name": "MOTION_LOG_TYPE", "label": "specify motion logging type", "type": "string", "defaultValue": "all" },
    { "name": "MOTION_PERIOD", "label": "specify motion watchdog in seconds", "type": "int", "defaultValue": "30" },
    { "name": "LOCALHOST_PORT", "label": "localhost port", "type": "int", "defaultValue": "8082" },
    { "name": "LOG_LEVEL", "label": "specify logging level", "type": "string", "defaultValue": "info" },
    { "name": "DEBUG", "label": "debug; true or false", "type": "boolean", "defaultValue": "false" },
    { "name": "HZN_EXCHANGE_APIKEY", "label": "exchange API key", "type": "string", "defaultValue": "" }
  ],
  "deployment": {
    "services": {
      "motion2mqtt": {
        "environment": [
          "SERVICE_LABEL=motion2mqtt","SERVICE_VERSION=0.0.12"
        ],
        "binds": null,
        "specific_ports": [
          { "HostPort": "8082:8082/tcp", "HostIP": "0.0.0.0" },
          { "HostPort": "8080:8080/tcp", "HostIP": "0.0.0.0" },
          { "HostPort": "8081:8081/tcp", "HostIP": "0.0.0.0" }
        ],
        "image": null,
        "privileged": true,
        "devices": [
          "/dev/video0:/dev/video0"
        ]
      }
    }
  },
  "tmpfs": {
    "size": 131071000
  },
  "ports": {
    "8082/tcp": 8082,
    "8080/tcp": 8080,
    "8081/tcp": 8081
  }
}
